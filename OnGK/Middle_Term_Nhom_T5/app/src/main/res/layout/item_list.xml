<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/image_list_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/images1_google"
        />
    <TextView
        android:id="@+id/image_list_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Dev"
        android:layout_toRightOf="@+id/image_list_image_view"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/image_list_size_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_list_image_view"
        android:layout_centerVertical="true"
        android:text="Size XL"
        android:textStyle="normal"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/image_list_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_list_image_view"
        android:layout_alignParentBottom="true"
        android:text="$10"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_marginLeft="10dp"
        />
    <ImageButton
        android:id="@+id/image_list_add_quantity_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_add_circle_32"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/image_list_quantity_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:layout_toLeftOf="@+id/image_list_add_quantity_btn"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />
        <ImageButton
            android:id="@+id/image_list_sub_quantity_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_remove_circle_outline_32"
            android:layout_toLeftOf="@id/image_list_quantity_btn"
            android:layout_centerVertical="true"
            />

</RelativeLayout>